{
    "node": true,     // Enable globals available when code is running inside of the NodeJS runtime environment.
    "mocha": true,    // Enable globals exposed by 'BDD' and 'TDD' UIs of Mocha.
    "jasmine": true,  // Enable globals exposed by Jasmine.
    "jquery": true,   // Enable globals exposed by jQuery.
    "browser": true,  // Standard browser globals e.g. `window`, `document`.
    "esversion": 6,   // Allow ES.next specific features such as `const` and `let`.
    "bitwise": false, // Prohibit bitwise operators (&, |, ^, etc.).
    "curly": false,   // Require {} for every new block or scope.
    "eqeqeq": true,   // Require triple equals i.e. `===`.
    "latedef": "nofunc", // Prohibit variable use before definition.
    "noarg": true,    // Prohibit use of `arguments.caller` and `arguments.callee`.
    "undef": true,    // Require all non-global variables be declared before they are used.
    "unused": false,  // Warn unused variables.
    "strict": true,   // Require `use strict` pragma in every file.
    "devel": false,
    "globals": {
        "angular": true,
        "_": true,
        "moment": true,
        "ApplicationConfiguration": true,
        "expect": true,
        "browser": true,
        "jasmine": true,
        "MAW": true,
        "utag": true
    },
    "predef": [
        "module",
        "inject"
    ],
    "devel": true     // Allow development statements e.g. `console.log();`.
}
